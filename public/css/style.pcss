@import "_variables.pcss";
@import "_normalize.pcss";
@import "_fontello.pcss";
@import "_buttons.pcss";

* {
    box-sizing: border-box;
}

html {
    font-size: 16px;
}

a {
    color: var(--link-color);
}

button {
    outline: none;
    border: none;
    -webkit-appearance: button;
    -webkit-tap-highlight-color: transparent;
    user-select: none;
    background: transparent;
}

#wordsApp {
    padding-top: 40px;
    color: var(--font-color);
    font-size: 14px;

    &.is-editMode {
        padding-bottom: 80px;
    }
}

.app-form {
    background: #fff;
    position: fixed;
    top: 2.5rem;
    left: 0;
    right: 0;
    z-index: 990;
    overflow: hidden;
    padding: 0 0.5rem;
    box-shadow: 0 0 20px rgba(#444, 0.2);

    transform: translate(0, -100%);
    visibility: hidden;
    transition: transform 0.2s cubic-bezier(0.24, 0.76, 0.58, 1), visibility 0.2s cubic-bezier(0.24, 0.76, 0.58, 1);

    .is-editMode & {
        visibility: visible;
        transform: translate(0, 0);
    }

    .form-field {
        padding: 0.5rem 0;
    }

    .form-holder {
        display: block;
        width: 100%;
        padding: 0.5rem 0;
    }

    input {
        border: none;
        background-color: transparent;
        background-size: cover;
        outline: none;
        padding: 8px 0;
        line-height: 20px;
        font-size: 1rem;
        width: 100%;
        border-bottom: 1px solid #eee;
        border-radius: 0;
    }

    .form-button {
        display: inline-block;
        border: none;
        outline: none;
        width: 100%;
        height: 2.25rem;
        line-height: 2.25rem;
        border-radius: 0.25rem;
        text-align: center;
        background-color: #666b6a;
        color: #fff;
        font-size: 1rem;
        font-weight: bold;

        &:active {
            outline: none;
            box-shadow: inset 0 0.4rem 1.5rem rgba(#000, 0.15);
        }
    }
}


.app-wordsList {
    border-top: 0.5px solid #eeeeee;

    .wordsList-handle {
        display: none;
    }

    .wordsList-item {
        display: flex;
        border-bottom: 0.5px solid #eeeeee;
        user-select: none;

        .item-col {
            width: 50%;
            padding: 12px 8px;
            line-height: 16px;
            
            &:first-child {
                font-weight: bold;
            }
        }
    }

}

/* AUTH SCREEN*/
.app-auth {
    width: 100%;
    height: 100%;
    padding: 16px;
    background-color: #f5f9f4;

    display: flex;
    align-items: center;
    justify-content: center;

    text-align: center;

    .auth-wrapper {
        width: 100%;
        padding-bottom: 2em;
    }

    .auth-title {
        font-size: 1.5em;
        margin: 0 0 2em;
        color: #20cb9c;
        border-bottom: 2px solid #20cb9c;
        display: inline-block;
    }
    
    .auth-desc {
        color: #555;
        margin: 0 0 1.5em;
    }
}


.app-header {
    background-color: var(--green);
    color: #fff;
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    right: 0;
    padding: 8px;

    .header-title {
        font-size: 16px;
        line-height: 24px;
        font-weight: bold;
        text-align: center;
        margin: 0;
    }

    .header-edit {
        position: absolute;
        top: 4px;
        left: 4px;
        color: #fff;
        padding: 4px;
        height: 2rem;

        &.icon-pencil-alt {
            font-size: 24px;
            line-height: 24px;
            &:before {
                margin: 0;
            }
        }
        &.icon-close {
            font-size: 14px;
            line-height: 24px;
        }
    }

    .header-back {
        position: absolute;
        top: 8px;
        left: 8px;
        line-height: 24px;
        height: 24px;
        padding: 0;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        &:before {
            margin-left: 0;
        }
    }

    .header-loading {
        position: absolute;
        top: 0;
        left: 4rem;
        right: 4rem;
        background-color: var(--green);
        line-height: 2.5rem;
        color: rgba(#fff, 0.5);
        font-size: 14px;
        text-align: center;
    }

    .header-settings {
        position: absolute;
        top: 4px;
        right: 4px;
        color: #fff;
        font-size: 24px;
        line-height: 24px;
        padding: 4px;
        &:before {
            margin: 0;
        }
        &:active {
            color: rgba(#fff, 0.7);
        }
    }
}


.app-settings {
    padding: 8px;

    .settings-userInfo {
        text-align: center;
        padding-top: 1rem;

        .userInfo-avatar {
            display: inline-block;
            width: 50px;
            height: 50px;
            background-size: cover;
            background-position: 50% 50%;
            border-radius: 25px;
            margin-bottom: 0.5em;
        }
        .userInfo-name {
            font-weight: bold;
            font-size: 1em;
            margin: 0 0 0.5em;
        }
    }
}

/* LOGOUT */
.app-logout {
    width: 100%;
}



.rc-swipeout {
    overflow: hidden;
    position: relative;
    &-content {
        position: relative;
        z-index: 10;
    }
    &-cover {
        position: absolute;
        z-index: 11;
        background: transparent;
        height: 100%;
        top: 0;
        display: none;
    }
    & .rc-swipeout-content,
    & .rc-swipeout-actions {
        transition: all 250ms;
    }
    &-actions {
        position: absolute;
        top: 0;
        bottom: 0;
        right: 0;
        display: flex;
        overflow: hidden;
        white-space: nowrap;
        &-left {
            left: 0;
            width: 0;
        }
        &-right {
            right: 0;
            width: 0;
        }
    }
    &-btn {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        z-index: 99;
        &-text{
            padding: 0 12px;
        }
    }
}


.icon-add {
    display: inline-block;
    position: relative;
    vertical-align: top;
    width: 1.25em;
    height: 1.25em;
    font-size: 1rem;

    &:before,
    &:after {
        content: '';
        position: absolute;
        background-color: #fff;
        border-radius: 0.125em;
    }
    &:before {
        width: 1.25em;
        height: 0.125em;
        left: 0;
        top: 0.5625em;
        margin: 0;
    }
    &:after {
        width: 0.125em;
        height: 1.25em;
        left: 0.5625em;
        top: 0;
    }
}